{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":disableRateLimiting",
    ":disablePrControls",
    "helpers:pinGitHubActionDigests",
    "security:openssf-scorecard"
  ],
  "kubernetes": {
    "fileMatch": ["\\.yaml$"]
  },
  "packageRules": [
    {
      "matchDepNames": ["ghcr.io/discordjs-japan/om"],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true
    }
  ]
}
